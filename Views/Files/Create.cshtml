@model CPMP.Models.File

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>File</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/upload" method="post" enctype="multipart/form-data" class="border p-4 rounded-3 bg-light" style="max-width: 500px; margin: 0 auto;">
            <div class="mb-4">
                <label for="formFile" class="form-label fw-bold mb-3">Select file to upload</label>
                <input class="form-control" type="file" id="formFile" name="file" required>
            </div>

            <input type="hidden" value="@Model.TaskId" name="taskId">

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-upload me-2"></i> Upload
                </button>
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-action="Edit" asp-controller="Tasks" asp-route-id="@Model.TaskId">Back to task</a>

</div>

