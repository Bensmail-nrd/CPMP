@model CPMP.Models.User

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div style="padding:15px">

            <div class="row">
                <div class="col-md-6">
                    <h5>Basic Information</h5>
                    <table class="table table-sm">
                        <tr>
                            <th>User ID</th>
                            <td>@Model.UserId</td>
                        </tr>
                        <tr>
                            <th>Username</th>
                            <td>@Model.Username</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th>Created At</th>
                            <td>@Model.CreatedAt?.ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>
                    </table>
                </div>

                <div class="col-md-6">
                    <h5>Roles</h5>
                    @if (Model.Roles.Any())
                    {
                        <ul class="list-group">
                            @foreach (var role in Model.Roles)
                            {
                                <li class="list-group-item">@role.Name</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No roles assigned</p>
                    }
                </div>
            </div>

            <div class="mt-3">
                <h5>User Activities</h5>
                <div class="row">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h6 class="card-title">Files</h6>
                                <p class="card-text">@Model.Files.Count files</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h6 class="card-title">Tasks</h6>
                                <p class="card-text">@Model.Tasks.Count tasks</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h6 class="card-title">Notifications</h6>
                                <p class="card-text">@Model.Notifications.Count notifications</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-primary btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.UserId" class="btn btn-danger btn-sm">Delete</a>
            </div>

</div>
