@model CPMP.Models.TeamMember

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeamId" class="control-label"></label>
                <select asp-for="TeamId" class ="form-control" asp-items="ViewBag.TeamId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="RoleInTeam" class="control-label"></label>
                <input asp-for="RoleInTeam" class="form-control" />
                <span asp-validation-for="RoleInTeam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        @if (ViewData["Error"]!=null)
        {
            <p class="text-danger">
                @ViewData["Error"]
            </p>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

