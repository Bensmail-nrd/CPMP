@model CPMP.Models.TeamMember

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
			<input type="hidden" asp-for="TeamId" />
			<input type="hidden" asp-for="UserId" />  
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input class="form-control" value="@Model.User?.Username" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="TeamId" class="control-label"></label>
                <input class="form-control" value="@Model.Team?.Name" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="RoleInTeam" class="control-label"></label>
                <select asp-for="RoleInTeam" class="form-control" asp-items="ViewBag.roles"></select>
                <span asp-validation-for="RoleInTeam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <a asp-action="Edit" asp-controller="Teams" asp-route-id="@Model.TeamId">Back task</a>
        </form>
    </div>
</div>

